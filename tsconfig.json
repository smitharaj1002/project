{
  "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "jsx": "react-jsx", // or "react" for older versions
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}


